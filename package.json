{
  "name": "genesys-web-messaging-tester",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "repository": "git@github.com:ovotech/genesys-web-messaging-tester.git",
  "author": "Lucas Woodward",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "test": "yarn workspaces foreach --verbose --exclude '@examples/*' run test",
    "build": "yarn workspaces foreach --verbose run build",
    "build:readme": "build-readme README.md && cp README.md ./packages/genesys-web-messaging-tester/",
    "build:docs": "typedoc && yarn build:readme",
    "publish": "yarn workspaces foreach --no-private --verbose npm publish --tolerate-republish"
  },
  "devDependencies": {
    "@ikerin/build-readme": "^1.1.1",
    "typedoc": "^0.22.3",
    "typedoc-plugin-markdown": "^3.11.11",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": "~16.10.0"
  },
  "jest": {
    "preset": "./jest.json"
  },
  "packageManager": "yarn@3.1.1"
}
